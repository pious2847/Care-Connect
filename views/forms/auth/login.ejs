<div class="container d-flex align-items-center justify-content-center vh-100">
    <div class="card shadow" style="width: 450px;">
        <div class="card-header bg-primary text-white text-center">
            <h3 class="mb-0">Care Connect</h3>
            <p class="mt-2">Welcome Back!</p>
        </div>
        <form id="loginForm" class="needs-validation" novalidate action="/login" method="post">
            <div class="card-body ">

                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" name="email" required>
                    <div class="invalid-feedback">Please enter a valid email address.</div>
                </div>

                <div class="mb-3">
                    <label for="status" class="form-label">Login Type</label>
                    <select class="form-control" id="status" name="accountType" required>
                        <option value="">Select login type</option>
                        <option value="hospitals">Hospital</option>
                        <option value="pharmacies">Pharmacy</option>
                        <option value="staff">Staff</option>
                    </select>
                    <div class="invalid-feedback">Please select account type.</div>
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control" id="password" name="password" required>
                    <div class="invalid-feedback">Please enter a password.</div>
                </div>
                <div class="row justify-content-between align-items-center p-3">
                    <div class="d-flex align-items-center">
                        <input type="checkbox" name="rememberme" id="rememberme" style="margin-right: 3px;">
                        <label for="rememberme" class="mb-0">Remember Me</label>
                    </div>
                    <a href="/forgotpassword" class="text-decoration-none">Forgot Password?</a>
                </div>

                <button type="submit" class="btn btn-primary" style="width: 100%;">Login</button>
                <div class="row justify-content-center align-items-center p-3">
                    <p>I dont have an account <a href="/register" class="text-decoration-none">Register?</a></p>
                    
                </div>
            </div>
        </form>


    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
    // Form validation
    (() => {
        'use strict';
        const form = document.getElementById('loginForm');

        form.addEventListener('submit', event => {
            if (!form.checkValidity()) {
                event.preventDefault();
                event.stopPropagation();
            }

            form.classList.add('was-validated');
        }, false);
    })();
</script>