<div class="card mb-4" style="max-width: 300px;">
    <div class="col g-0 p-0">
        
            <img src="<%= patient.profilePicture.picture %>" class="img-fluid rounded-start  w-100"
                style="object-fit: cover ;height: 12rem;" alt="<%= patient.firstName %> <%= patient.lastName %>" >
       

        <div class="card-body p-2">
            <h5 class="card-title text-primary mb-1">
                <%= patient.firstName %>
                    <%= patient.lastName %>
            </h5>
            <p class="card-text mb-2">
                <small class="text-muted">
                    <%= patient.gender %>, <%= patient.dateOfBirth.toLocaleDateString() %>
                </small>
            </p>
            <ul class="list-unstyled mb-3">
                <li><i class="bi bi-phone me-2 text-muted"></i>
                    <%= patient.contact.phone %>
                </li>
                <li><i class="bi bi-envelope me-2 text-muted"></i>
                    <%= patient.contact.email %>
                </li>
                <li>
                    <i class="bi bi-hospital me-2 text-muted"></i>
                    <% patient.registeredHospitals.forEach(function(hospital) { %>
                        <span class="badge bg-light text-primary border me-1">
                            <%= hospital.hospital.name %>
                        </span>
                        <% }); %>
                </li>
                <li><i class="bi bi-droplet me-2 text-muted"></i>
                    <%= patient.bloodGroup %>
                </li>
            </ul>
            <div class="d-flex justify-content-between align-items-center">
                <span class="badge bg-<%= patient.currentAdmission.isAdmitted ?  'success' :'danger'%>">
                    <%= patient.currentAdmission.isAdmitted ? 'Admitted' : 'Not Admitted' %>
                </span>
                <a href="/dashboard/<%= accountType %>/<%= account._id %>/patient/<%= patient._id %>"
                    class="btn btn-sm btn-outline-primary">View Details</a>
            </div>
        </div>
    </div>
</div>
<style>
    .card {
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
        border: none;
        border-radius: 0.75rem;
        overflow: hidden;
        transition: transform 0.2s, box-shadow 0.2s;
    }

    .card:hover {
        transform: translateY(-0.5rem);
        box-shadow: 0 1rem 2rem rgba(0, 0, 0, 0.15);
    }

    .card-title {
        font-size: 1rem;
        font-weight: bold;
        color: #007bff;
    }

    .card-text {
        font-size: 0.875rem;
        color: #6c757d;
    }

    .list-unstyled li {
        margin-bottom: 0.5rem;
        font-size: 0.875rem;
    }

    .list-unstyled li i {
        font-size: 1rem;
        vertical-align: middle;
    }

    .badge {
        font-size: 0.75rem;
        padding: 0.4rem 0.6rem;
    }

    .btn-outline-primary {
        border: 1px solid #007bff;
        color: #007bff;
        padding: 0.4rem 0.6rem;
        font-size: 0.8rem;
    }

    .btn-outline-primary:hover {
        background-color: #007bff;
        color: #fff;
    }

    @media (max-width: 576px) {
        .card {
            max-width: 100%;
        }

        .card-body {
            padding: 1rem;
        }

        .list-unstyled li {
            font-size: 0.8rem;
        }
    }
</style>