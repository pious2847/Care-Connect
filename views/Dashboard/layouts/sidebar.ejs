      </div>
      <img src="/icons/icon-92x92.png" alt="" class="logo-icon">
      
      <span class="logo-text"><span class="text-primary">Care</span>-Connect</span>
  </div>
  <div class="col justify-content-evenly">
    <ul class="nav-links">
        <li class="nav-item">
            <a href="/dashboard/<%= accountType %>/<%= account._id %>/" class="nav-link">
                <i class='bx bx-grid-alt'></i>
                <span class="link-text">Dashboard</span>
            </a>
        </li>
        <% if (accountType === 'hospitals') { %>
            <li class="nav-item">
                <a href="/dashboard/<%= accountType %>/<%= account._id %>/staffs" class="nav-link">
                  <i class='bx bx-user'></i>
                    <span class="link-text">Staffs</span>
                </a>
            </li>
            <li class="nav-item">
                <a href="/dashboard/<%= accountType %>/<%= account._id %>/appointments" class="nav-link">
                    <i class='bx bx-calendar' ></i>
                    <span class="link-text">Appointments</span>
                </a>
            </li>
            <li class="nav-item">
                <a href="/dashboard/<%= accountType %>/<%= account._id %>/patients" class="nav-link">
                    <i class='bx bx-health' ></i>
                    <span class="link-text">Patients</span>
                </a>
            </li>
        <% } %>
        <% if (account.isOwner) { %>
            <li class="nav-item">
                <a href="/dashboard/<%= accountType %>/<%= account._id %>/hospitals" class="nav-link">
                    <i class='bx bx-clinic'></i>
                    <span class="link-text">Hospitals</span>
                </a>
            </li>
            <li class="nav-item">
                <a href="/dashboard/<%= accountType %>/<%= account._id %>/pharmacies" class="nav-link">
